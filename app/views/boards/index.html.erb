<h1>Listing boards for <%= @organization.name %></h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Organization</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.date %></td>
        <td><%= board.organization_id %></td>
        <td><%= link_to 'Show', [@organization, board] %></td>
        <td><%= link_to 'Edit', edit_organization_board_path(@organization, board) %></td>
        <td><%= link_to 'Destroy', organization_board_path(@organization, board), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Board', new_organization_board_path(@organization) %>
